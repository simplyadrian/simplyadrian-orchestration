{
  "name": "dse",
  "description": "A role to manage the configuration of a DataStax Enterprise Server in EC2.",
  "json_class": "Chef::Role",
  "default_attributes": {
    "ephemeral_lvm": {
      "mount_point": "/var/lib/cassandra"
    },
    "java": {
      "install_flavor": "oracle",
      "jdk_version": "7",
      "oracle": {
        "accept_oracle_download_terms": "true"
      }
    },
    "opscenter-agent": {
      "enabled": true
    }
  },
  "override_attributes": {

  },
  "chef_type": "role",
  "run_list": [
    "recipe[nativex-ohai::default]",
    "role[ie]",
    "recipe[nativex-dse::determine_ec2_topology]",
    "recipe[nativex-dse::determine_seeds]",
    "recipe[nativex-dse::default]"
  ],
  "env_run_lists": {

  }
}
