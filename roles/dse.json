{
  "name": "dse",
  "description": "A role to manage the configuration of a DataStax Enterprise Server in EC2.",
  "json_class": "Chef::Role",
  "default_attributes": {
    "ephemeral_lvm": {
      "mount_point": "/var/lib/cassandra",
      "filesystem": "xfs",
      "volume_group_name": "vg_data_ephem",
      "logical_volume_name": "lv_cass_raid0"
    },
    "java": {
      "install_flavor": "oracle",
      "jdk_version": "7",
      "oracle": {
        "accept_oracle_download_terms": "true"
      }
    },
    "opscenter-agent": {
      "enabled": true
    },
    "tuned": {
      "active_profile": "throughput-performance"
    }
  },
  "override_attributes": {

  },
  "chef_type": "role",
  "run_list": [
    "role[base]",
    "recipe[tuned-nativex::apply_profile]",
    "recipe[dse-nativex::determine_ec2_topology@0.1.0]",
    "recipe[dse-nativex::default@0.1.0]"
  ],
  "env_run_lists": {

  }
}
