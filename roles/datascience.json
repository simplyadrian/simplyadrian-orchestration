{
  "name": "datascience",
  "description": "A role to manage the configuration of a data science server in EC2",
  "json_class": "Chef::Role",
  "default_attributes": {
    "build-essential": {
      "compile_time": "true"
    },
    "ephemeral_lvm": {
      "mount_point": "/mnt/ephemeral"
    },
    "python": {
      "install_method": "source",
      "version": "3.3.5"
    },
    "r": {
      "version": "3.0.1"
    },
    "rabbitmq": {
      "version": "3.3.5",
      "enabled_users":[{
        "name": "datascience",
        "password": "datascience",
        "tag": "administrator",
        "rights": [{
          "conf": ".*",
          "write": ".*",
          "read": ".*"
        }]
      }]
    },
    "java": {
      "install_flavor": "oracle",
      "jdk_version": "7",
      "oracle": {
        "accept_oracle_download_terms": "true"
      }
    },
    "ebs": {
      "volumes": {
        "/mnt/ebs": {
          "size": 500,
          "piops": 1000,
          "fstype": "xfs"
        }
      }
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "role[base]",
    "recipe[ebs]",
    "recipe[iptables-nativex::ssh]",
    "recipe[python]",
    "recipe[python-nativex::pippackages]",
    "recipe[r]",
    "recipe[r-nativex::rpackages]",
    "recipe[rabbitmq]",
    "recipe[rabbitmq::mgmt_console]",
    "recipe[rabbitmq::user_management]"
  ],
  "env_run_lists": {
  }
}
