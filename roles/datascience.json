{
  "name": "datascience",
  "description": "A role to manage the configuration of a data science server in EC2",
  "json_class": "Chef::Role",
  "default_attributes": {
    "build-essential": {
      "compile_time": "true"
    },
    "authorization": {
      "sudo": {
        "users": ["brett.stime", "zhiyong.tan", "ted.bienapfl"],
        "passwordless": "true"
      }
    },
    "ephemeral_lvm": {
      "mount_point": "/mnt/datascience"
    },
    "python": {
      "install_method": "source",
      "version": "3.3.5"
    },
    "r": {
      "version": "3.0.1"
    },
    "rabbitmq": {
      "version": "3.3.5"
    },
    "java": {
      "install_flavor": "oracle",
      "jdk_version": "7",
      "oracle": {
        "accept_oracle_download_terms": "true"
      }
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "role[base]",
    "recipe[nativex-iptables::ssh]",
    "recipe[python]",
    "recipe[nativex-python::pippackages]",
    "recipe[r]",
    "recipe[nativex-r::rpackages]",
    "recipe[rabbitmq]",
    "recipe[rabbitmq::mgmt_console]"
  ],
  "env_run_lists": {
  }
}
