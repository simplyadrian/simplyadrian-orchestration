{
  "name": "base",
  "description": "A role to manage the base configuration of a linux server in EC2",
  "json_class": "Chef::Role",
  "default_attributes": {
    "build-essential": {
      "compile_time": "true"
    },
    "ntp":{
       "servers": ["0.us.pool.ntp.org","1.us.pool.ntp.org","2.us.pool.ntp.org","3.us.pool.ntp.org"]
    }
  },
  "override_attributes": {
    "snmp": {
       "community": "xmass1970",
       "full_systemview": "true",
       "sources": "10.15.0.0/16",
       "syslocationVirtual": "AWS Cloud - Virtual Pool, CentOS Linux 6.5, Linux Server",
       "syscontact": "sysadmins <sysadmins@w3i.com>"
    }
  },
  "chef_type": "role",
  "run_list": [
    "recipe[aws]",
    "recipe[ephemeral_lvm]",
    "recipe[iptables]",
    "recipe[snmp]",
    "recipe[nativex-dnsupdate]",
    "recipe[nativex-hostname::createhostfile]",
    "recipe[nativex-yum::deleterepo]",
    "recipe[nativex-yum::doupgrade]",
    "recipe[ntp]",
    "recipe[sudo]",
    "recipe[users::sysadmins]"
  ],
  "env_run_lists": {
  }
}
