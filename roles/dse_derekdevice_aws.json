{
  "name": "dse_derekdev_aws",
  "description": "A role to manage the configuration of a DataStax Enterprise Server in EC2 that belongs to the dev-derek1 development cluster. This cluster is temporary and used for device cleanup testing.",
  "json_class": "Chef::Role",
  "default_attributes": {
    "tuned": {
      "active_profile": "cassandra-ssd-storage"
    },
    "cassandra": {
      "cluster_name": "dev-derek1",
      "auto_bootstrap": true,
      "dse_version": "4.6.0-1",
      "max_hint_window_in_ms": 604800000,
      "hinted_handoff_throttle_in_kb": 512,
      "max_hints_delivery_threads": 4,
      "partitioner": "org.apache.cassandra.dht.RandomPartitioner",
      "memory_allocator": "JEMallocAllocator",
      "concurrent_writes": 64,
      "memtable_total_space_in_mb": 1024,
      "rpc_address": "0.0.0.0",
      "rpc_server_type": "hsha",
      "rpc_min_threads": 16,
      "rpc_max_threads": 2048,
      "batch_size_warn_threshold_in_kb": 64,
      "in_memory_compaction_limit": 256,
      "compaction_throughput_mb_per_sec": 64,
      "read_request_timeout_in_ms": 10000,
      "write_request_timeout_in_ms": 10000,
      "cross_node_timeout": true,
      "phi_convict_threshold": 12,
      "endpoint_snitch": "org.apache.cassandra.locator.GossipingPropertyFileSnitch",
      "dynamic_snitch_badness_threshold": 0.2,
      "inter_dc_tcp_nodelay": false,
      "inter_dc_stream_throughput_outbound_Mbps": 10,
      "max_heap_size": "1G",
      "heap_newsize": "100M",
      "jvm_gc_UseNUMA": true,
      "gc_log_PrintGCDetails": true,
      "gc_log_PrintGCDateStamps": true,
      "gc_log_PrintHeapAtGC": true,
      "gc_log_PrintTenuringDistribution": true,
      "gc_log_PrintGCApplicationStoppedTime": true,
      "gc_log_PrintPromotionFailure": true,
      "gc_log_PrintFLSStatistics": true,
      "gc_log_Xloggc": "gc.log",
      "gc_log_UseGCLogFileRotation": true,
      "gc_log_NumberOfGCLogFiles": 10,
      "gc_log_GCLogFileSize": "10M",
      "log_syslog_enabled": false
    },
    "opscenter-agent": {
      "opscenter-ip": "10.15.72.5",
      "version": "5.0.2-1"
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "recipe[dse-nativex::determine_seeds]",
    "role[base]",
    "recipe[tuned-nativex::apply_profile]",
    "recipe[dse-nativex::determine_ec2_topology]",
    "recipe[dse-nativex::default]"
  ],
  "env_run_lists": {
  }
}
