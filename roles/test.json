{
  "name": "test",
  "description": "A role to manage the configuration of a data science server in EC2",
  "json_class": "Chef::Role",
  "default_attributes": {
    "build-essential": {
      "compile_time": "true"
    },
    "ephemeral_lvm": {
      "mount_point": "/mnt/ephemeral"
    },
    "ebs": {
      "raids": {
        "dev/md0": {
          "num_disks": 4,
          "disk_size": 10,
          "piops": 1000,
          "raid_level": 10,
          "fstype": "xfs",
          "mount_point": "/mnt/ebs",
          "uselvm": true
        }
      }
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "role[base]",
    "recipe[ebs]",
    "recipe[nfs::server]",
    "recipe[iptables-nativex::ssh]"
  ],
  "env_run_lists": {
  }
}
