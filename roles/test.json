{
  "name": "test",
  "description": "A role to manage the base configuration of a linux server in EC2",
  "json_class": "Chef::Role",
  "default_attributes": {
    "build-essential": {
      "compile_time": "true"
    },
    "ntp":{
       "servers": ["0.us.pool.ntp.org","1.us.pool.ntp.org","2.us.pool.ntp.org","3.us.pool.ntp.org"]
    },
    "snmp": {
       "community": "xmass1970",
       "full_systemview": "true",
       "sources": ["10.15.0.0/16", "localhost"],
       "syslocationVirtual": "AWS Cloud - Virtual Pool, CentOS Linux 6.5, Linux Server",
       "syscontact": "sysadmins <sysadmins@w3i.com>"
    },
    "ephemeral_lvm": {
      "mount_point": "/mnt/ephemeral"
    },
    "python": {
      "install_method": "source",
      "version": "3.3.5"
    },
    "r": {
      "version": "3.0.1"
    },
    "rabbitmq": {
      "version": "3.3.5",
      "default_user": "user",
      "default_pass": "user"
    },
    "java": {
      "install_flavor": "oracle",
      "jdk_version": "7",
      "oracle": {
        "accept_oracle_download_terms": "true"
      }
    },
    "ebs": {
      "volumes": {
        "/mnt/ebs": {
          "size": 500,
          "piops": 1000,
          "fstype": "xfs"
        }
      }
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "recipe[ohai-nativex]",
    "recipe[aws]",
    "recipe[vim]",
    "recipe[nano]",
    "recipe[bash-completion]",
    "recipe[dstat]",
    "recipe[numad-nativex]",
    "recipe[tuned-nativex]",
    "recipe[ephemeral_lvm]",
    "recipe[iptables]",
    "recipe[snmp]",
    "recipe[dnsupdate-nativex::addprv]",
    "recipe[hostname-nativex::updatehostname]",
    "recipe[yum-nativex::customrepo]",
    "recipe[spacewalkclient-nativex]",
    "recipe[pbis-nativex]",
    "recipe[yum-nativex::doupgrade]",
    "recipe[yum-nativex::deleterepo]",
    "recipe[ntp]",
    "recipe[motd]",
    "recipe[chef-client::delete_validation]",
    "recipe[chef-client]",
    "recipe[ebs]",
    "recipe[iptables-nativex::ssh]",
    "recipe[python]",
    "recipe[python-nativex::pippackages]",
    "recipe[r]",
    "recipe[r-nativex::rpackages]",
    "recipe[rabbitmq]",
    "recipe[rabbitmq::mgmt_console]",
    "recipe[rabbitmq::user_management]"
  ],
  "env_run_lists": {
  }
}
