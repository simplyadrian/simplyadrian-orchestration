# Generated by Chef - local changes will be overwritten

user-manual /usr/share/doc/privoxy/user-manual
confdir /etc/privoxy
logdir /var/log/privoxy
actionsfile match-all.action # Actions that are applied to all sites and maybe overruled later on.
actionsfile default.action   # Main actions file
<% if node['privoxy']['adblockplus_subscription'] == true -%>
  <% node['privoxy']['url']['list'].each do |list| -%>
actionsfile <%= list.split("/")[-1].split(".")[0] %>.script.action
filterfile <%= list.split("/")[-1].split(".")[0] %>.script.filter
  <% end -%>
<% end -%>
actionsfile user.action      # User customizations
filterfile default.filter
filterfile user.filter      # User customizations
logfile logfile
listen-address  0.0.0.0:<%= node['privoxy']['port'] %>
toggle  1
enable-remote-toggle  0
enable-remote-http-toggle  0
enable-edit-actions 0
enforce-blocks 0
buffer-limit 4096
forwarded-connect-retries  0
accept-intercepted-requests 0
allow-cgi-request-crunching 0
split-large-forms 0
keep-alive-timeout 5
socket-timeout 300
